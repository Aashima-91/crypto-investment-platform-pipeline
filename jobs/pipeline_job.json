#replace email with your databricks email id
{
  "name": "crypto-investment-pipeline",
  "email_notifications": {
    "no_alert_for_skipped_runs": false
  },
  "webhook_notifications": {},
  "timeout_seconds": 0,
  "max_concurrent_runs": 1,
  "tasks": [
    {
      "task_key": "bronze_ingestion",
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "/Workspace/Users/{email}/crypto-investment-platform-pipeline/notebooks/bronze/01_bronze_ingestion.py",
        "source": "WORKSPACE"
      },
      "timeout_seconds": 0,
      "email_notifications": {},
      "webhook_notifications": {},
      "environment_key": "Default"
    },
    {
      "task_key": "silver_technical",
      "depends_on": [
        {
          "task_key": "bronze_ingestion"
        }
      ],
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "/Workspace/Users/{email}/crypto-investment-platform-pipeline/notebooks/silver/02_silver_technical.sql",
        "source": "WORKSPACE"
      },
      "timeout_seconds": 0,
      "email_notifications": {},
      "webhook_notifications": {}
    },
    {
      "task_key": "silver_business",
      "depends_on": [
        {
          "task_key": "silver_technical"
        }
      ],
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "/Workspace/Users/{email}/crypto-investment-platform-pipeline/notebooks/silver/03_silver_business.sql",
        "source": "WORKSPACE"
      },
      "timeout_seconds": 0,
      "email_notifications": {},
      "webhook_notifications": {}
    },
    {
      "task_key": "gold_layer",
      "depends_on": [
        {
          "task_key": "silver_business"
        }
      ],
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "/Workspace/Users/{email}/crypto-investment-platform-pipeline/notebooks/gold/03_gold_layer.sql",
        "source": "WORKSPACE"
      },
      "timeout_seconds": 0,
      "email_notifications": {}
    }
  ],
  "queue": {
    "enabled": true
  },
  "environments": [
    {
      "environment_key": "Default",
      "spec": {
        "environment_version": "4"
      }
    }
  ],
  "performance_target": "PERFORMANCE_OPTIMIZED"
}
